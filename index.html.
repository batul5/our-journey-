<script>
    let audioCtx;
    function startAudio() { if(!audioCtx) audioCtx = new (window.AudioContext || window.webkitAudioContext)(); if(audioCtx.state==='suspended') audioCtx.resume(); }
    
    function playPop() {
        if(!audioCtx) return;
        const o = audioCtx.createOscillator();
        const g = audioCtx.createGain();
        o.type = 'sine'; o.frequency.setValueAtTime(800, audioCtx.currentTime);
        g.gain.setValueAtTime(0.1, audioCtx.currentTime);
        o.connect(g); g.connect(audioCtx.destination);
        o.start(); o.stop(audioCtx.currentTime + 0.1);
    }

    function toggle(e) { playPop(); let d = e.querySelector('.details'); d.style.display = (d.style.display==='block')?'none':'block'; }
    
    let cur = 1;
    function next() {
        playPop();
        document.getElementById('p'+cur).classList.remove('active');
        cur++;
        if(cur<=10) { document.getElementById('p'+cur).classList.add('active'); }
        else { document.getElementById('popBtn').style.display='none'; document.getElementById('final-btn').style.display='block'; }
    }

    function reveal() { playPop(); document.getElementById('secret').style.display='block'; window.scrollTo({top: document.body.scrollHeight, behavior:'smooth'}); }

    setInterval(() => {
        let s = document.createElement('div'); s.className = 'sparkle';
        s.innerHTML = ['‚ú®','‚ù§Ô∏è','‚≠ê'][Math.floor(Math.random()*3)];
        s.style.left = Math.random()*100+'vw';
        s.style.fontSize = Math.random()*20+10+'px';
        document.body.appendChild(s); setTimeout(()=>s.remove(), 5000);
    }, 400);
</script>
